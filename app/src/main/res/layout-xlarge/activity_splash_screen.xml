<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context="biz.africanbib.Activity.SplashScreen">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/margin_xxlarge"
        android:layout_marginTop="@dimen/margin_xxlarge"
        android:background="@android:color/transparent"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_xlarge"
        android:layout_marginRight="@dimen/margin_xlarge"
        android:orientation="vertical"
        android:padding="@dimen/padding_medium">


        <Button
            android:id="@+id/button_add_business"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            android:background="@drawable/ps__button_dropbox"
            android:drawablePadding="@dimen/padding_medium"
            android:drawableRight="@android:drawable/ic_menu_add"
            android:drawableTint="@color/colorBlack"
            android:gravity="center|center_vertical"
            android:paddingBottom="@dimen/padding_large"
            android:paddingLeft="@dimen/padding_xlarge"
            android:paddingStart="@dimen/padding_xlarge"
            android:paddingTop="@dimen/padding_large"
            android:text="@string/add_business"
            android:textSize="@dimen/text_xlarge" />


        <Button
            android:id="@+id/button_edit_business"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:background="@drawable/ps__button_dropbox"
            android:drawablePadding="@dimen/padding_medium"
            android:drawableRight="@android:drawable/ic_menu_edit"
            android:drawableTint="@color/colorBlack"
            android:gravity="center|center_vertical"
            android:paddingBottom="@dimen/padding_large"
            android:paddingLeft="@dimen/padding_xlarge"
            android:paddingStart="@dimen/padding_xlarge"
            android:paddingTop="@dimen/padding_large"
            android:text="@string/edit_business"
            android:textSize="@dimen/text_xlarge" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/poweredBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_medium"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:drawableBottom="@drawable/gdlogo2"
            android:fontFamily="sans-serif-condensed"
            android:text="Powered By"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_large" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:linksClickable="true"
            android:text="@string/website"
            android:textAlignment="center"
            android:textColor="#0000ff"
            android:textSize="@dimen/text_large" />
    </LinearLayout>

</RelativeLayout>
